// app global css

body
  background-color: $grey-2

/* custom: arrow direction to right in dropdown and rotation animation */
.arrow-right .q-btn-dropdown__arrow
  transform: rotate(-90deg)

/* arror rotation animation */
.arrow-right .rotate-180
  transform: rotate3d(0, 0, 1, 90deg)

/* router-link page in-out transition */
.page-enter-active, .page-leave-active
  transition: opacity .3s ease

.page-enter, .page-leave-to
/* .page-leave-active below version 2.1.8 */
  opacity: 0
.q-header {
  z-index: 1050
}
.swal2-popup.swal2-toast {
  // box-shadow: 10px 4px 25px 105px rgba(0,0,0,0.75);
}

blockquote.q-markdown--primary {
  border-width: 1px 4px 1px;
  border-style: solid;
  border-color: transparent $deep-orange-4;
  background-color: $deep-orange-1;
  color: $deep-orange-10;
  border-radius: 4px;
}

blockquote.q-markdown--secondary {
  border-width: 1px 4px 1px;
  border-style: solid;
  border-color: transparent $cyan-4;
  background-color: $cyan-1;
  color: $cyan-10;
  border-radius: 4px;
}

.bg-white
  background-color #fff

@font-face
  font-family fontinfo
  src url(../statics/fonts/Comfortaa-Regular.ttf)

.font-info
  font-family 'fontinfo'
  font-size: 24px

@font-face
  font-family fontnav
  src url(../statics/fonts/Sansation-Regular.ttf)

.font-nav
  font-family 'fontnav'

.on-transparent-bg {
  text-shadow: none;
  color: black;
}
.on-color-bg {
  text-shadow: 1px 1px 6px black;
}
.q-item.q-router-link--active {
  color: inherit
}
.on-color-bg {
    text-shadow: 1px 1px 6px #000;
}
.text-h6 {
    font-size: 1.25rem;
    font-weight: 500;
    line-height: 2rem;
    letter-spacing: 0.0125em;
}
.q-item__label {
    line-height: 1.2em !important;
    max-width: 100%;
}
*, *:before, *:after {
  box-sizing: inherit;
  -webkit-tap-highlight-color: transparent;
  -moz-tap-highlight-color: transparent;
}